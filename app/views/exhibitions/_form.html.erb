<%= simple_form_for @exhibition do |f| %>
  <%= f.input :title, class: "p-0 m-0" %>
  <%= f.input :date, class: "p-0 m-0" %>
  <%= f.input :starting_date, label: "starting_date - A CHANGER"  %>
  <%= f.input :ending_date, label: "ending_date - A CHANGER"  %>
  <%= f.input :category, label: "category - A CHANGER" %>
  <%= f.input :price, label: "price - A CHANGER" %>
  <%= f.input :place %>
  <%= f.input :site, collection: @sites, value_method: :id, label: "Site" , include_blank: false  %>
  <%= f.input :fake, collection: [false, true],  label: "fake - A CHANGER"%>
  <%= f.submit "Create exhibition", class: "btn btn-success" %>
<% end %>
