
<%= @exhibition.title %>
<%= @exhibition.description %>
<%= simple_form_for @exhibition do |f| %>
  <%= f.input :place, input_html: {class: "edit-form"} %>
  <%= f.association :site, collection: @sites.order(:name), value_method: :id, label: "Site" , input_html: {class: "edit-form"}   %>
  <%= f.input :category, label: "category - A CHANGER", collection: Exhibition::CATEGORIES, input_html: {class: "edit-form"} %>
  <%= f.input :address, label: "addresse - A checker", input_html: {class: "edit-form"} %>
  <%= f.submit "Edit exhibition", class: "btn btn-success" %>
<% end %>
